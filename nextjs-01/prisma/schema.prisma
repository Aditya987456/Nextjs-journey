
generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @default(autoincrement())
  username String
  email    String @unique // âœ… Unique constraint
  password String
}
